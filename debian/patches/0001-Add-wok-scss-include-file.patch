Signed-off-by: Frédéric Bonnard <frediz@linux.vnet.ibm.com>
---
 ui/css/Makefile.am     |  2 +-
 ui/css/src/kimchi.scss | 12 ++++++------
 2 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/ui/css/Makefile.am b/ui/css/Makefile.am
index 6573e2b..dc7741d 100644
--- a/ui/css/Makefile.am
+++ b/ui/css/Makefile.am
@@ -20,4 +20,4 @@ dist_css_DATA = kimchi.css
 
 css: src/*.scss src/modules/*.scss
 	echo "Compiling .scss file $<"
-	sassc -s expanded $< kimchi.css
+	pysassc -I /usr/share/wok/scss -s expanded $< kimchi.css
diff --git a/ui/css/src/kimchi.scss b/ui/css/src/kimchi.scss
index 0d53901..58bae6c 100644
--- a/ui/css/src/kimchi.scss
+++ b/ui/css/src/kimchi.scss
@@ -19,20 +19,20 @@
 //
 // Wok Variables
 // ----------------------------------------------------------------------------
-@import "../../../../../../../ui/css/src/modules/wok-variables";
+@import "modules/wok-variables";
 
 //
 // Imported functions
 // ----------------------------------------------------------------------------
-@import "../../../../../../../ui/css/src/modules/compact";
-@import "../../../../../../../ui/css/src/vendor/compass-mixins/lib/compass";
-@import "../../../../../../../ui/css/src/vendor/bootstrap-sass/bootstrap/mixins";
+@import "modules/compact";
+@import "vendor/compass-mixins/lib/compass";
+@import "vendor/bootstrap-sass/bootstrap/mixins";
 
 //
 // Extended classes
 // ----------------------------------------------------------------------------
-@import "../../../../../../../ui/css/src/modules/utils";
-@import "../../../../../../../ui/css/src/modules/animation";
+@import "modules/utils";
+@import "modules/animation";
 
 //
 // Kimchi variables and classes
